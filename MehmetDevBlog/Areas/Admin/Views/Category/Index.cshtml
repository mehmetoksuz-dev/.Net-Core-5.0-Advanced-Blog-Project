@using X.PagedList
@using X.PagedList.Mvc.Core
@model IPagedList<EntityLayer.Concrete.Category>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h1>Indexxx</h1>
<br />
<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Category Name</th>
        <th>Passive</th>
        <th>Active</th>
        <th>Update</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <th>@item.CategoryID</th>
            <td>@item.CategoryName</td>
            <td><a href="/Admin/Category/DeleteCategory/@item.CategoryID" id="deleteBtn" onclick="return confirm('Are you sure for delete category?')" class="btn btn-danger">Make Passive</a></td>
            <td><a href="#" class="btn btn-info">Make Active</a></td>
            <td><a href="#" class="btn btn-success">Edit/Update</a></td>
        </tr>
    }
</table>
<a href="/Admin/Category/AddCategory/" class="btn btn-primary">New Category</a> 
<br /> <br />
@Html.PagedListPager((IPagedList)Model, page=>Url.Action("Index", new {page} ))